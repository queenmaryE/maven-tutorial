pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *') // Polls the SCM every 5 minutes
    }
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm // Uses the SCM config from the UI
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Tests...'
            }
        }
        stage('Deliver') {
            steps {
                echo 'Delivering Application...'
            }
        }
    }
}
